{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "moduleResolution": "Node",
    "rootDirs": [
      "/src",
      "/test",
      "/mock",
      "./typings"
    ],
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": []
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "src/pages/multistore"
  ]
}
